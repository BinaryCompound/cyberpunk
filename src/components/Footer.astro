---
import "../style/global.css";
import CyberLogoBlack from "../../public/logo2.png";
import CdProjectLogo from "../../public/CD_Projekt_logo 1.png";
---

<div class="footer">
    <section class="item-center">
        <div>
            <img src={CyberLogoBlack.src} alt="" />
            <img src={CdProjectLogo.src} alt="" />
        </div>

        <div></div>

        <div class="text-center">
            <h3>Лицензия</h3>
            <h3 class="line">Политика конфиденциальности</h3>
        </div>
    </section>
    <section>
        <p>CD PROJEKT®, Cyberpunk®, Cyberpunk 2077®</p>
    </section>
</div>

<style>
    .footer {
        color: black;
        background-color: white;
        height: 100%;
    }

    .line {
        width: max-content;
        padding-left: 20px;
    }

    .item-center {
        display: grid;
        grid-template-columns: 1fr 2rem 1fr;
        justify-items: center;
        align-items: center;
        align-items: center;
    }

    .text-center {
        display: flex;
        align-items: center;
    }

    img {
        height: 63px;
    }
    p {
        color: white;
        text-align: center;
        background-color: black;
        margin: 0px;
    }

    @media screen and (max-width: 600px) {
        .item-center {
            display: block;
            margin: -4px;
        }
        .text-center {
            display: block;
            text-align: center;
        }

        .line {
            width: auto;
            padding-left: 0;
        }
    }
</style>
