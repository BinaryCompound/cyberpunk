---
import "../style/buttonMoreInfo.css";
---

<div class="banner">
    <div class="banner-text">
        <h1>
            Доступно на <br />
             всех платформах
        </h1>
        <br />
        <br />
        <button>Узнать больше</button>
    </div>
</div>

<style>
    .banner {
        position: absolute;
        top: 700px;
        left: 969px;
        right: 320px;
        margin: auto auto;
        text-align: left;
        width: 300px;
        background-color: rgb(0, 0, 0);
        clip-path: polygon(
            10% 0,
            100% 0,
            100% 20%,
            100% 90%,
            90% 100%,
            0 100%,
            0% 80%,
            0 10%
        );
    }

    .banner-text {
        margin: 25px;
        font-size: 12px;
    }

    @media screen and (max-width: 600px) {
        .banner {
            width: 300px;
            position: static;
            text-align: center;
        }

        .banner-text {
            font-size: 12px;
        }
    }
</style>
