---
import ScreenShotOne from "../../public/1.jpg";
import ScreenShotTwo from "../../public/2.png";
import ScreenShotThree from "../../public/3.jpg";
---

<body>
    <section class="BlockPictures">
        <img src={ScreenShotOne.src} alt="screenshot" />
        <img src={ScreenShotTwo.src} alt="screenshot" />
        <img
            src={ScreenShotThree.src}
            alt="screenshot"
            class="item"
            style="width: 660px; height: 390px;"
        />
    </section>
</body>

<style>
    img {
        clip-path: polygon(
            10% 0,
            100% 0,
            100% 20%,
            100% 90%,
            90% 100%,
            0 100%,
            0% 80%,
            0 10%
        );
        border: 4px solid aquamarine;
        border-radius: 8px;
        width: 480px;
        height: 270px;
        margin: 20px;
    }

    .BlockPictures {
        display: grid;
        grid-template-columns: auto auto;
        grid-template-rows: auto auto;
        grid-auto-flow: column;
        align-items: center;
        justify-content: center;
    }
    .item {
        grid-row: span 2;
    }
</style>
